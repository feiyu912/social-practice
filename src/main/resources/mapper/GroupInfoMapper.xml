<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm.dao.GroupInfoDAO">
    <!-- 字段映射配置 -->
    <resultMap id="GroupInfoResultMap" type="com.ssm.entity.GroupInfo">
        <id column="group_id" property="groupId" />
        <result column="activity_id" property="activityId" />
        <result column="group_name" property="groupName" />
        <result column="leader_id" property="leaderId" />
        <result column="member_count" property="memberCount" />
        <result column="max_members" property="maxMembers" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <select id="findById" parameterType="Integer" resultMap="GroupInfoResultMap">
        SELECT * FROM group_info WHERE group_id = #{groupId}
    </select>

    <select id="findByActivityId" parameterType="Integer" resultMap="GroupInfoResultMap">
        SELECT * FROM group_info WHERE activity_id = #{activityId}
    </select>

    <select id="findByLeaderId" parameterType="Integer" resultMap="GroupInfoResultMap">
        SELECT * FROM group_info WHERE leader_id = #{leaderId}
    </select>

    <insert id="insert" parameterType="com.ssm.entity.GroupInfo" useGeneratedKeys="true" keyProperty="groupId">
        INSERT INTO group_info (activity_id, group_name, leader_id, member_count, max_members, status, create_time, update_time)
        VALUES (#{activityId}, #{groupName}, #{leaderId}, #{memberCount}, #{maxMembers}, #{status}, #{createTime}, #{updateTime})
    </insert>

    <update id="update" parameterType="com.ssm.entity.GroupInfo">
        UPDATE group_info
        SET group_name = #{groupName},
            leader_id = #{leaderId},
            member_count = #{memberCount},
            max_members = #{maxMembers},
            status = #{status},
            update_time = #{updateTime}
        WHERE group_id = #{groupId}
    </update>

    <update id="updateMemberCount">
        UPDATE group_info SET member_count = #{memberCount}, update_time = NOW() WHERE group_id = #{groupId}
    </update>

    <update id="updateStatus">
        UPDATE group_info SET status = #{status}, update_time = NOW() WHERE group_id = #{groupId}
    </update>

    <delete id="delete" parameterType="Integer">
        DELETE FROM group_info WHERE group_id = #{groupId}
    </delete>

    <delete id="deleteByActivityId" parameterType="Integer">
        DELETE FROM group_info WHERE activity_id = #{activityId}
    </delete>
</mapper>